            <div class="feed-list">
                @if (FeedItems == null || FeedItems.Count == 0)
                {
                    <WaitingPage Text="Loading..."/>
                }
                else
                {
                    foreach (var feedItem in FeedItems)
                    {
                        <div class="feed-item">
                            <div class="topic">
                                @if (string.IsNullOrWhiteSpace(feedItem.TopicPictureUri))
                                {
                                    <a class="title" href="@feedItem.PermentLink" target="_blank"><div class="summary">@((MarkupString)feedItem.Summary)</div></a>
                                }
                                else
                                {
                                    <a class="title" href="@feedItem.PermentLink" target="_blank"><img src="@WebClient.Utils.SafeImageUri(feedItem.TopicPictureUri)"/></a>
                                }
                            </div>

                            <div class="icon-and-title">
                                <div class="icon">
                                    <FallbackImage Src="@WebClient.Utils.SafeImageUri(feedItem.FeedIconUri)" Title="@feedItem.FeedName" FallbackSrc="@($"https://www.google.com/s2/favicons?domain={new Uri(feedItem.FeedUri).Host}")"/>
                                </div>
                                <a class="title multiline-overflow-hidden" title="@feedItem.Title" href="@feedItem.PermentLink" target="_blank">@((MarkupString)feedItem.Title)</a>
                            </div>

                            <div class="info-and-toolbar">
                                @if (LocalUser.Feeds.Find(f => f.Uri == feedItem.FeedUri) != null)
                                {
                                    <div class="small-btn disabled">subscribed</div>
                                }
                                else
                                {
                                    <div class="small-btn" onclick="@((Action)(() => OnSubscribe.InvokeAsync(feedItem.FeedUri)))">subscribe</div>
                                }
                                <div class="info" title="@feedItem.FeedName @feedItem.PubDate"><span>@feedItem.FeedName @feedItem.PubDate</span></div>
