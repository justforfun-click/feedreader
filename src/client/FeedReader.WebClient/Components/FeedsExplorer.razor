@code
{
    [Parameter]
    public Feed Feed { get; set; }

    [Parameter]
    public EventCallback<string> OnSubscribe { get; set; }

    [Parameter]
    public EventCallback<FeedCategory> OnShowCategory { get; set; }

    private FeedCategory Category { get; set; } = FeedCategory.Recommended;

    private List<FeedItem> FeedItems { get; set; }

    private CancellationTokenSource _cancelToken = new CancellationTokenSource();

    private Dictionary<FeedCategory, List<FeedItem>> FeedItemsByCategory = new Dictionary<FeedCategory, List<FeedItem>>();

    private int NextPage { get; set; }

    protected override void OnInitialized()
    {
        if (Feed != null)
        {
            FeedItems = Feed.Items;
        }

        foreach (var category in Enum.GetValues(typeof(FeedCategory)))
        {
            FeedItemsByCategory.Add((FeedCategory)category, new List<FeedItem>());
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && Feed == null)
        {
            await ShowCategory(Category);
        }
    }

    private Task More()
    {
        return FeedService.RefreshFeedAsync(Feed, true);
    }

    private async Task ShowCategory(FeedCategory category, int page = 0)
    {
        if (OnShowCategory.HasDelegate)
        {
            _ = OnShowCategory.InvokeAsync(category);
        }

        Category = category;
        _cancelToken.Cancel();
        _cancelToken = new CancellationTokenSource();
        var token = _cancelToken;
        await JsRuntime.InvokeVoidAsync("eval", $"document.querySelectorAll('.nav-item').forEach(e => e.classList.remove('active')); document.querySelector('.nav-item-{category}').classList.add('active')");

        var feedItems = await FeedService.GetFeedItemsByCategory(category, page);
        if (token.IsCancellationRequested)
        {
            return;
        }

        if (page == 0)
        {
            FeedItemsByCategory[category] = feedItems;
        }
        else
        {
            FeedItemsByCategory[category].AddRange(feedItems);
        }

        NextPage = feedItems.Count == 50 ? page + 1 : 0;
        FeedItems = FeedItemsByCategory[category];
        StateHasChanged();
    }

    private void OpenInGoogleTranslate(FeedItem feedItem)
    {
        var uri = $"https://translate.google.com/translate?hl=en&sl=auto&tl=zh-CN&u={HttpUtility.UrlEncode(feedItem.PermentLink)}";
        JsRuntime.InvokeVoidAsync("open", uri, "_blank");
    }
}
