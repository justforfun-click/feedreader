@inject IJSRuntime JsRuntime

<img id="img-@GetHashCode()" src="@(string.IsNullOrWhiteSpace(Src) ? FallbackSrc : Src)" title="@Title" @onerror="OnError" />

@code
{
    [Parameter]
    public string Src { get; set; }

    [Parameter]
    public string FallbackSrc { get; set; }

    [Parameter]
    public string Title { get; set; }

    private void OnError()
    {
        JsRuntime.InvokeVoidAsync("imgFallback", $"img-{GetHashCode()}", FallbackSrc);
    }
}
