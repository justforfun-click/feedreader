@inject LocalUser LocalUser

<div class="main-layout">
    <div class="header">
        @Header
    </div>

    <div class="body">
        @ChildContent
    </div>

    <div class="footer">
        <PageFooter/>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment Header { get; set; } = @<PageHeader/>;
}
